{
  "compilerOptions": {
    // lib add algumas funcionalidades, adicionando tupagens, importar, etc etc etc.
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    // allowJs informa que tem aruqivos tanto JS como TS
    "allowJs": true,
    // jsx fala que estamos utilizando o jsx do react, para ele tender que vai ter html dentro do javascript
     "jsx": "react-jsx",                              
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
     "noEmit": true,       
    //  allowSintheticDefaultImprots adiciona a posbilidade de adicionar aruqivos json                          
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  // include informa onde o codigo da aplicacao vai estar
  "include": ["src"]
}
